[core]
    hooksPath = ~/.git-hooks
    pager = delta
    editor = nvim

[interactive]
    diffFilter = delta --color-only

[alias]
    copybr= "!git branch --show-current | pbcopy"
    w-lease = "!git push --force-with-lease origin"
[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = zdiff3
