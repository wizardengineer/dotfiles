[core]
    hooksPath = ~/.git-hooks
    pager = delta
    editor = nvim

[interactive]
    diffFilter = delta --color-only

[alias]
    cb = "!git branch --show-current | pbcopy"
    w-lease = "!git push --force-with-lease origin"
	ct-diff = diff --no-index --no-prefix
[delta]
    navigate = true  # use n and N to move between diff sections
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = zdiff3
