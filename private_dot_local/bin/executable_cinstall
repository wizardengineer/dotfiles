# Instlal general packages
brew install starship fzf curl nodejs npm python3 git kitty bat nvim tmux neofetch

brew install ccache cmake lld

echo "✅ Installing Package manager for tmux"
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

# Install lazygit...pretty please
brew install jesseduffield/lazygit/lazygit

# Install omzsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended

# Install atuin
curl --proto '=https' --tlsv1.2 -LsSf https://setup.atuin.sh | sh

echo "✅ Installing Rust..."
# Install rust
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh

# Install packages with rust
cargo install fd-find git-delta ripgrep
ln -s $(which fdfind) ~/.local/bin/fd

echo "✅ Configuring for terminal Looks..."
git clone https://github.com/zsh-users/zsh-autosuggestions \
  ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions

git clone https://github.com/zsh-users/zsh-syntax-highlighting.git \
  ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting

git clone --depth=1 https://github.com/romkatv/powerlevel10k.git \
  ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/themes/powerlevel10k

echo "✅ Installing skhd-zig..."
brew install jackielii/tap/skhd-zig

